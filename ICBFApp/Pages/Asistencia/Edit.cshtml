@page
@model ICBFApp.Pages.Asistencia.EditModel
@{
}

<br>
<h2>Editar Asistencia</h2>

@* Muestra mensaje de error al no completar todos los campos del formulario *@
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

@* Muestra mensaje de éxito al agregar un nuevo niño *@
@if (Model.successMessage.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        </div>
    </div>
}

<form method="POST">

    <input type="hidden" class="form-control" name="idAsistencia" value="@Model.asistenciaInfo.idAsistencia" />

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Fecha</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="fecha" value="@Model.asistenciaInfo.fecha">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="estadoNino">Estado del niño:</label>
        <div class="col-sm-6">
            <select id="nivel" name="nivel" class="form-control">
                <option value="">Selecciona la nota</option>
                @foreach (var asistencia in Model.listaEstado)
                {
                    if (asistencia.Trim().Equals(Model.asistenciaInfo.estadoNino?.Trim(), StringComparison.OrdinalIgnoreCase))
                    {
                        <option value="@asistencia" selected>@asistencia</option>
                    }
                    else
                    {
                        <option value="@asistencia">@asistencia</option>
                    }
                }
            </select>
        </div>
    </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/Asistencia/Index" role="button">Cancelar</a>
            </div>
        </div>

</form>
