@page
@model ICBFApp.Pages.AvancesAcademicos.CreateModel
@{
}

<br>
<h2>Agregar Avance academico</h2>

@* Muestra mensaje de error al no completar todos los campos del formulario *@
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

@* Muestra mensaje de éxito al agregar un nuevo niño *@
@if (Model.successMessage.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        </div>
    </div>
}

<form method="POST">

    <div class="row mb-3">
        
        <div class="col-md-6">
            <label class="col-form-label-sm col-form-label" for="SelectedJardinId">Selecciona el año escolar:</label>
            <select name="anioEscolar" value="@Model.avanceAcademicoInfo.anioEscolar" class="form-control">
                <option value=""> Selecciona el año escolar </option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
            </select>
        </div>

        <div class="col-md-6">
            <label class="col-form-label-sm col-form-label" for="SelectedJardinId">Selecciona el nivel:</label>
            <select name="nivel" value="@Model.avanceAcademicoInfo.nivel" class="form-control">
                <option value=""> Selecciona el nivel </option>
                <option value="Natal">Natal</option>
                <option value="Prenatal">Prenatal</option>
                <option value="Parvulo">Parvulo</option>
                <option value="Jardin">Jardin</option>
                <option value="Pre-jardin">Pre-jardin</option>
            </select>
        </div>

    </div>

    <div class="row mb-3">

        <div class="col-md-6">
            <label class="col-form-label-sm col-form-label" for="SelectedJardinId">Selecciona la nota:</label>
            <select name="notas" value="@Model.avanceAcademicoInfo.notas" class="form-control">
                <option value=""> Selecciona la nota </option>
                <option value="S">S</option>
                <option value="A">A</option>
                <option value="B">B</option>
            </select>
        </div>

        <div class="col-md-6">
            <label class="col-form-label-sm col-form-label">Descripcion</label>
            <input type="text" class="form-control" name="descripcion" value="@Model.avanceAcademicoInfo.descripcion">
        </div>

    </div>

    <div class="row mb-3">

        <div class="col-md-6">
            <label class="col-form-label-sm col-form-label">Selecciona la fecha de entrega:</label>
            <input type="date" class="form-control" name="fechaEntrega" value="@Model.avanceAcademicoInfo.fechaEntrega">
        </div>

        <div class="col-md-6">
            <label class="col-form-label-sm col-form-label" for="ninio">Selecciona el Niño:</label>
            <select id="ninio" name="ninio" class="form-control">
                <option value="">Seleccione el niño</option>
                @foreach (var ninio in Model.listaNinios)
                {
                    <option value="@ninio.idNinio">@ninio.datosBasicos.identificacion</option>
                }
            </select>
        </div>

    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-danger" href="/AvancesAcademicos/Index" role="button">Cancelar</a>
        </div>
    </div>

</form>