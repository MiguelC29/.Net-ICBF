@page
@model ICBFApp.Pages.AvancesAcademicos.IndexModel
@{
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-message">
        @Model.SuccessMessage
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#success-message").fadeOut("slow");
            }, 5000); // 5000 milisegundos = 5 segundos
        });

        // Función para mostrar mensaje de confirmación antes de eliminar
        function confirmarEliminacion(idAvanceAcademico) {
            Swal.fire({
                title: '¿Está seguro?',
                text: "Esta acción no se puede deshacer",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminarlo!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Si el usuario confirma, redirigir a la acción de eliminación
                    window.location.href = '/AvancesAcademicos/Delete?idAvanceAcademico=' + idAvanceAcademico;
                } else {
                    // Si el usuario cancela, no hacer nada
                }
            });
        }
    </script>
}

<br />
<h2>Lista de Avances Academicos</h2>
<a class="btn btn-primary btn-sm" href="/AvancesAcademicos/Create">
    <span class="material-symbols-outlined">add</span>
</a>

<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Identificacion</td>
            <td>Nombre</td>
            <td>Nivel</td>
            <td>Notas</td>
            <td>Descripcion</td>
            <td>FechaEntrega</td>
            <td>Año escolar</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listAvanceAcademico)
        {
            <tr>
                <td>@item.idAvanceAcademico</td>
                <td>@item.datosBasicosInfo.identificacion</td>
                <td>@item.datosBasicosInfo.nombres</td>
                <td>@item.nivel</td>
                <td>@item.notas</td>
                <td>@item.descripcion</td>
                <td>@item.fechaEntrega</td>
                <td>@item.anioEscolar</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/AvancesAcademicos/Edit?idAvanceAcademico=@item.idAvanceAcademico">
                    <span class="material-symbols-outlined">edit_square</span>
                    </a>
                    <a class="btn btn-danger btn-sm" href="#" onclick="confirmarEliminacion(@item.idAvanceAcademico)">
                        <span class="material-symbols-outlined">delete</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
