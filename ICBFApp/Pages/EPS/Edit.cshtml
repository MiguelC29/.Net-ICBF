@page
@model ICBFApp.Pages.EPS.EditModel
@{
}

<br />
<h2>Editar EPS</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}


<form method="POST">

    <input type="hidden" class="form-control" name="idEps" value="@Model.epsInfo.idEps" />

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Nombre EPS</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombre" value="@Model.epsInfo.nombre">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Editar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/EPS/Index" role="button">Cancelar</a>
        </div>
    </div>
</form>