@page
@model ICBFApp.Pages.Rol.CreateModel
@{
}

<br />
<h2>Agregar Nuevo Rol</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Nombre Rol</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombre" value="@Model.rolInfo.nombre">
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Rol/Index" role="button">Cancelar</a>
        </div>
    </div>
</form>
