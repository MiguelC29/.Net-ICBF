@page
@model ICBFApp.Pages.Usuario.CreateModel
@{
}

<br />
<h2>Agregar Nuevo Usuario</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}


<form method="POST">
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Nombres</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombres" value="@Model.datosBasicos.nombres">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Fecha de Nacimiento</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="fechaNacimiento" value="@Model.datosBasicos.fechaNacimiento">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Celular</label>
        <div class="col-sm-6">
            <input type="tel" class="form-control" name="celular" value="@Model.datosBasicos.celular">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Dirección</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="direccion" value="@Model.datosBasicos.direccion">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="SelectedRoleId">Selecciona un rol:</label>
        <div class="col-sm-6">
            <select name="rol" value="@Model.rol" class="form-control">
                <option value=""> Selecciona un rol </option>
                @foreach (var item in Model.listaRoles)
                {
                    <option value="@item.idRol">@item.nombre</option>
                }
            </select>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Usuario/Index" role="button">Cancelar</a>
        </div>
    </div>
</form>