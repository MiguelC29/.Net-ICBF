@page
@model ICBFApp.Pages.Usuario.CreateModel
@{
}

<br>
<h2>Agregar Nuevo Usuario</h2>

@* Muestra mensaje de error al no completar todos los campos del formulario *@
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">

    @* Método para mostrar los tipos de documento de la base de datos en el formulario de usuarios *@
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="rol">Tipo de Documento</label>
        <div class="col-sm-6">
            <select id="tipoDocumento" name="tipoDocumento" class="form-control">
                <option value="">Seleccione un Tipo de Documento</option>
                @foreach (var tipoDoc in Model.tipoDocInfo)
                {
                    <option value="@tipoDoc.idTipoDoc">@tipoDoc.tipo</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Identificación</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="identificacion" value="@Model.datosBasicos.identificacion"
                   maxlength="10" pattern="[0-9]{10}" title="Por favor ingrese un número de documento válido de 10 dígitos">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Nombres</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombres" value="@Model.datosBasicos.nombres">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Fecha de Nacimiento</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="fechaNacimiento" value="@Model.datosBasicos.fechaNacimiento">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Teléfono</label>
        <div class="col-sm-6">
            <input type="tel" class="form-control" name="celular" value="@Model.datosBasicos.celular"
                   maxlength="10" pattern="[0-9]{10}" title="Por favor ingrese un número de celular válido de 10 dígitos">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Dirección</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="direccion" value="@Model.datosBasicos.direccion">
        </div>
    </div>

    @* Método para mostrar los roles de la base de datos en el formulario de usuarios *@
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="rol">Rol</label>
        <div class="col-sm-6">
            <select id="rol" name="rol" class="form-control">
                <option value="">Seleccione un Rol</option>
                @foreach (var rol in Model.rolInfo)
                {
                    <option value="@rol.idRol">@rol.nombre</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Usuario/Index" role="button">Cancelar</a>
        </div>
    </div>

</form>